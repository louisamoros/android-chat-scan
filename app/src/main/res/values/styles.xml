        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ActionBar1"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background1</item>
    </style>

    <!-- Custom theme 2 -->
    <style name="Theme2" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar2</item>
        <item name="android:windowBackground">@color/window_background2</item>
