<resources>
    
    <!-- Default theme. -->
    <style name="DefaultTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:titleTextStyle">@color/black</item>
    <item name="android:colorBackground">@color/foreground_material_light</item>
    <item name="android:displayOptions">disableHome</item>
    <item name="android:gravity">center</item>
    </style>
    <style name="ActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>
    </style>


    <!-- Custom theme 1 -->
    <style name="Theme1" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar1</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:titleTextStyle">@color/blue</item>
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:displayOptions">disableHome</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionBar1"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue_action_bar</item>
    </style>


</resources>
